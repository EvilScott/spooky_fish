<h1>New gear purchase</h1>
<%= form_for @sold, url: { action: 'submit' } do |f| %>
    <fieldset>
      <%= f.hidden_field :action_type_id %>

      <div class="control-group">
        <%= f.label :owner, class: 'control-label' %>
        <%= f.text_field :owner %>
      </div>

      <div class="control-group">
        <%= f.label :net_type, class: 'control-label' %>
        <%= f.collection_select :net_type_id, NetType.all, :id, :to_s %>
      </div>

      <div class="control-group">
        <%= f.label :region, class: 'control-label' %>
        <%= f.collection_select :region_id, Region.all.order(:region_name), :id, :to_s %>
      </div>

      <div class="control-group">
        <%= f.label :reason, class: 'control-label' %>
        <%= f.collection_select :reason_id, Reason.all, :id, :to_s %>
      </div>

      <div class="control-group">
        <%= f.label_tag :recycling_credit_code %>
        <%= f.text_field_tag :recycling_credit_code %>
      </div>

      <div class="control-group">
        <%= f.label_tag :disposal_receipt %>
        <%= f.text_field_tag :disposal_receipt %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </fieldset>
<% end %>
